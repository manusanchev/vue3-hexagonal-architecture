    if (index !== -1) {
      employees.value[index] = { ...employees.value[index], ...updatedEmployee }
    }
  }

  const removeEmployee = (id: string) => {
    employees.value = employees.value.filter(emp => emp.id !== id)
  }

  const setLoading = (loading: boolean) => {
    isLoading.value = loading
  }

  return {
